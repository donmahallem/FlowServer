{
    "name": "@donmahallem/flowserver",
    "version": "1.0.0",
    "description": "",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "scripts": {
        "test": "mocha",
        "build": "tsc",
        "build:doc": "node ./node_modules/typedoc/bin/typedoc --out ./tt2/ --mode modules --exclude /**/index ./src/",
        "test-ci": "nyc npm run test",
        "test:live": "mocha --opts ./test/.mocha.opts --watch --watch-extensions ts src/**/*.spec.ts",
        "start": "npm run build:live",
        "build:live": "nodemon",
        "docs": "typedoc --options typedoc.json",
        "api-docs": "apidoc -i ./src/ -o ./docs/api/",
        "lint": "tslint -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "lint-fix": "tslint --fix -c tslint.json -p tsconfig-lint.json src/**/*.ts",
        "test:lint": "npm run lint",
        "test:build": "npm run build",
        "test:unit": "npm run test-ci",
        "test:docs": "npm run docs",
        "test:api-docs": "npm run api-docs"
    },
    "author": "",
    "license": "ISC",
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "es2017",
            "es7",
            "es6",
            "dom"
        ],
        "declaration": true,
        "outDir": "./dist/",
        "baseUrl": "./src/",
        "strict": true,
        "esModuleInterop": true
    },
    "devDependencies": {
        "@types/chai": "~4.2.4",
        "@types/express": "~4.17.1",
        "@types/mocha": "~5.2.7",
        "@types/node": "~12.12.4",
        "@types/sinon": "~7.5.0",
        "apidoc": "~0.17.7",
        "chai": "~4.2.0",
        "mocha": "~6.2.2",
        "nodemon": "~1.19.4",
        "nyc": "~14.1.1",
        "sinon": "~7.5.0",
        "ts-node": "~8.4.1",
        "tslint": "~5.20.0",
        "typedoc": "~0.15.0",
        "typescript": "~3.6.4"
    },
    "nyc": {
        "include": [
            "src/*.ts",
            "src/**/*.ts"
        ],
        "exclude": [
            "typings",
            "src/**/*.spec.ts",
            "**/*.d.ts"
        ],
        "extension": [
            ".ts"
        ],
        "require": [
            "ts-node/register"
        ],
        "reporter": [
            "json",
            "html",
            "text-summary",
            "lcov"
        ],
        "sourceMap": true,
        "instrument": true,
        "all": true
    },
    "dependencies": {
        "@donmahallem/flow-api-types": "~2.5.0",
        "@donmahallem/flowapi": "~5.1.0",
        "body-parser": "~1.19.0",
        "express": "~4.17.1",
        "express-session": "~1.17.0",
        "google-auth-library": "~5.5.1",
        "googleapis": "~44.0.0",
        "jsonschema": "~1.2.4",
        "jsonwebtoken": "~8.5.1",
        "nconf": "~0.10.0"
    },
    "files": [
        "dist/*",
        "src/*"
    ],
    "bin": {
        "fitserver": "./build/app.js"
    }
}
